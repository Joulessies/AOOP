<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.image.*?>

<HBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cofitearia.milktea.controllers.NavigationController" alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #e3f2fd; -fx-padding: 15px 30px;">
   <children>
      <!-- Logo -->
      <StackPane alignment="CENTER">
         <children>
            <Circle fx:id="logoCircle" radius="40.0" stroke="#1565C0" strokeWidth="2.0" fill="transparent" />
            <ImageView fx:id="logoImageView" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/logo.png" />
               </image>
            </ImageView>
         </children>
      </StackPane>
      
      <!-- Order Now Button -->
      <Button fx:id="orderNowButton" mnemonicParsing="false" onAction="#handleOrderNow" style="-fx-background-color: #1565C0; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20px;" text="Order Now">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
         <tooltip>
            <Tooltip text="Start a new order" />
         </tooltip>
      </Button>
      
      <!-- Navigation Links -->
      <HBox alignment="CENTER" spacing="30.0">
         <children>
            <Hyperlink fx:id="locationLink" mnemonicParsing="false" onAction="#handleLocation" text="Location" textFill="#1565C0">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
               <tooltip>
                  <Tooltip text="View shop location" />
               </tooltip>
            </Hyperlink>
            
            <Hyperlink fx:id="aboutLink" mnemonicParsing="false" onAction="#handleAbout" text="About Us" textFill="#1565C0">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
               <tooltip>
                  <Tooltip text="Learn about Cofitearia Milktea" />
               </tooltip>
            </Hyperlink>
            
            <Hyperlink fx:id="menuLink" mnemonicParsing="false" onAction="#handleMenu" text="Menu" textFill="#1565C0">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
               <tooltip>
                  <Tooltip text="View our menu" />
               </tooltip>
            </Hyperlink>
            
            <Hyperlink fx:id="rateLink" mnemonicParsing="false" onAction="#handleRateUs" text="Rate Us" textFill="#1565C0">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
               <tooltip>
                  <Tooltip text="Rate our service" />
               </tooltip>
            </Hyperlink>
         </children>
      </HBox>
      
      <!-- Spacer to push user info to the right -->
      <Region HBox.hgrow="ALWAYS" />
      
      <!-- User Info (if logged in) -->
      <VBox fx:id="userInfoPanel" alignment="CENTER_RIGHT" visible="false">
         <children>
            <Label fx:id="userNameLabel" text="User Name" textFill="#1565C0">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Label>
            <Hyperlink fx:id="logoutLink" mnemonicParsing="false" onAction="#handleLogout" text="Logout" textFill="#1565C0">
               <font>
                  <Font name="Arial" size="10.0" />
               </font>
               <tooltip>
                  <Tooltip text="Logout from the system" />
               </tooltip>
            </Hyperlink>
         </children>
      </VBox>
   </children>
</HBox>
