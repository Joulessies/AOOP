<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cofitearia.milktea.controllers.MainDashboardController">
   <center>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f5f5f5;">
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
         <children>
            <Label fx:id="welcomeLabel" text="Welcome!" textFill="#2196F3">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            <Label fx:id="userInfoLabel" text="User Information" textFill="#666666">
               <font>
                  <Font name="System" size="16.0" />
               </font>
            </Label>
            <Label text="Main Dashboard" textFill="#333333">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold;" text="Logout">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 1 0 0 0;">
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         <children>
            <Label text="Ready" textFill="#666666">
               <font>
                  <Font name="System" size="12.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="timeLabel" text="Current Time" textFill="#666666">
               <font>
                  <Font name="System" size="12.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </bottom>
</BorderPane>
