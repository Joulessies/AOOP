<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cofitearia.milktea.controllers.MainDashboardController">
   <top>
      <VBox>
         <children>
            <!-- Menu Bar -->
            <MenuBar fx:id="menuBar">
               <menus>
                  <Menu mnemonicParsing="true" text="File">
                     <items>
                        <MenuItem mnemonicParsing="true" text="New Sale" />
                        <SeparatorMenuItem />
                        <MenuItem mnemonicParsing="true" text="Print" />
                        <SeparatorMenuItem />
                        <MenuItem mnemonicParsing="true" text="Exit" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="true" text="View">
                     <items>
                        <MenuItem mnemonicParsing="true" text="Refresh" />
                        <SeparatorMenuItem />
                        <MenuItem mnemonicParsing="true" text="Accessibility Settings" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="true" text="Help">
                     <items>
                        <MenuItem mnemonicParsing="true" text="Help" />
                        <SeparatorMenuItem />
                        <MenuItem mnemonicParsing="true" text="About" />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
            
            <!-- Tool Bar -->
            <ToolBar fx:id="toolBar">
               <items>
                  <Button mnemonicParsing="false" text="Quick Sale" />
                  <Button mnemonicParsing="false" text="Inventory" />
                  <Button mnemonicParsing="false" text="Reports" />
               </items>
            </ToolBar>
         </children>
      </VBox>
   </top>
   
   <left>
      <!-- Navigation Panel -->
      <VBox fx:id="navigationPanel" alignment="CENTER" spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 0 1 0 0;">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <!-- User Info -->
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label fx:id="welcomeLabel" text="Welcome!" textFill="#2196F3">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="userInfoLabel" text="User Information" textFill="#666666">
                     <font>
                        <Font name="System" size="12.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            
            <!-- Navigation Buttons -->
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="inventoryButton" mnemonicParsing="false" prefWidth="180.0" text="📦 Inventory Management" />
                  <Button fx:id="salesButton" mnemonicParsing="false" prefWidth="180.0" text="💰 Sales Processing" />
                  <Button fx:id="reportsButton" mnemonicParsing="false" prefWidth="180.0" text="📊 Reports &amp; Analytics" />
                  <Button fx:id="usersButton" mnemonicParsing="false" prefWidth="180.0" text="👥 User Management" />
                  <Button fx:id="settingsButton" mnemonicParsing="false" prefWidth="180.0" text="⚙️ Settings" />
               </children>
            </VBox>
            
            <!-- Logout Button -->
            <Button fx:id="logoutButton" mnemonicParsing="false" prefWidth="180.0" text="🚪 Logout" />
         </children>
      </VBox>
   </left>
   
   <center>
      <!-- Main Content Area -->
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #ffffff;">
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
         <children>
            <!-- Dashboard Title -->
            <Label text="Dashboard" textFill="#333333">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            
            <!-- Quick Stats Cards -->
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <!-- Inventory Status Card -->
                  <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #e3f2fd; -fx-background-radius: 10; -fx-border-color: #2196F3; -fx-border-radius: 10;">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <Label text="📦" textFill="#2196F3">
                           <font>
                              <Font name="System" size="24.0" />
                           </font>
                        </Label>
                        <Label text="Inventory" textFill="#2196F3">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Label text="Manage stock levels and products" textFill="#666666" textAlignment="CENTER">
                           <font>
                              <Font name="System" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  
                  <!-- Sales Status Card -->
                  <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #e8f5e8; -fx-background-radius: 10; -fx-border-color: #4CAF50; -fx-border-radius: 10;">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <Label text="💰" textFill="#4CAF50">
                           <font>
                              <Font name="System" size="24.0" />
                           </font>
                        </Label>
                        <Label text="Sales" textFill="#4CAF50">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Label text="Process customer orders" textFill="#666666" textAlignment="CENTER">
                           <font>
                              <Font name="System" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  
                  <!-- Reports Status Card -->
                  <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #fff3e0; -fx-background-radius: 10; -fx-border-color: #FF9800; -fx-border-radius: 10;">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <Label text="📊" textFill="#FF9800">
                           <font>
                              <Font name="System" size="24.0" />
                           </font>
                        </Label>
                        <Label text="Reports" textFill="#FF9800">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Label text="View analytics and insights" textFill="#666666" textAlignment="CENTER">
                           <font>
                              <Font name="System" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <!-- Quick Actions -->
            <VBox alignment="CENTER" spacing="15.0">
               <children>
                  <Label text="Quick Actions" textFill="#333333">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Button mnemonicParsing="false" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="New Sale" />
                        <Button mnemonicParsing="false" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" text="Check Inventory" />
                        <Button mnemonicParsing="false" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;" text="View Reports" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
   
   <bottom>
      <!-- Status Bar -->
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 1 0 0 0;">
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         <children>
            <Label text="Ready" textFill="#666666">
               <font>
                  <Font name="System" size="12.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="timeLabel" text="Current Time" textFill="#666666">
               <font>
                  <Font name="System" size="12.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </bottom>
</BorderPane>
